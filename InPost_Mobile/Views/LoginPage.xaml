<Page
    x:Class="InPost_Mobile.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:InPost_Mobile.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Black">

    <Grid>
        <StackPanel VerticalAlignment="Center" Margin="24">

            <Image Source="ms-appx:///Assets/header_logo.jpg" Height="50" Margin="0,0,0,10" HorizontalAlignment="Center"/>

            <ProgressBar x:Name="LoginProgress" IsIndeterminate="True" Visibility="Collapsed" Margin="0,0,0,20"/>
            <TextBlock x:Name="StatusText" Foreground="#FF5555" HorizontalAlignment="Center" Margin="0,0,0,10" TextWrapping="Wrap" FontSize="16" FontWeight="SemiBold"/>

            <StackPanel x:Name="StepPhone" Visibility="Visible">
                <TextBlock x:Name="LblPhone" Text="Numer telefonu" Foreground="#BBBBBB" FontSize="14" Margin="0,0,0,5"/>
                <TextBox x:Name="PhoneInput" InputScope="Number" PlaceholderText="500 123 456" Height="45" FontSize="20"/>

                <TextBlock x:Uid="Lbl_OnlyPl" Text="(Obsługiwane tylko polskie numery +48)" Foreground="#666666" FontSize="12" Margin="0,5,0,0" HorizontalAlignment="Right"/>

                <Button x:Name="BtnSendSms" Content="DALEJ" Click="SendSms_Click" 
                        Background="#FFCC00" Foreground="Black" FontWeight="Bold" BorderThickness="0"
                        HorizontalAlignment="Stretch" Height="60" Margin="0,20,0,0"/>
            </StackPanel>

            <StackPanel x:Name="StepSms" Visibility="Collapsed">
                <TextBlock x:Name="LblSms" Text="Kod weryfikacyjny SMS" Foreground="#BBBBBB" FontSize="14" Margin="0,0,0,5"/>
                <TextBox x:Name="SmsInput" InputScope="Number" PlaceholderText="XXXXXX" Height="45" FontSize="20" MaxLength="6"/>

                <Button x:Name="BtnVerify" Content="ZALOGUJ SIĘ" Click="VerifySms_Click" 
                        Background="#FFCC00" Foreground="Black" FontWeight="Bold" BorderThickness="0"
                        HorizontalAlignment="Stretch" Height="60" Margin="0,20,0,0"/>

                <Button x:Name="BtnBack" Content="POPRAW NUMER" Click="BackToPhone_Click" 
                        Background="Transparent" Foreground="White" BorderBrush="White" BorderThickness="2"
                        HorizontalAlignment="Stretch" Height="60" Margin="0,15,0,0"/>
            </StackPanel>
        </StackPanel>

        <Button x:Name="BtnSkip" Content="POMIŃ LOGOWANIE" Click="Skip_Click" 
                VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Margin="24,0,24,20"
                Background="Transparent" Foreground="White" BorderBrush="#666666" BorderThickness="2" Height="60"/>
    </Grid>
</Page>