<Page
    x:Class="InPost_Mobile.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:InPost_Mobile.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0">
            <StackPanel Margin="20">

                <TextBlock x:Uid="TxtSettingsTitle" Text="USTAWIENIA" FontSize="40" FontWeight="Light" Margin="0,0,0,30"/>

                <TextBlock x:Name="LblAccountHeader" x:Uid="LblAccountHeader" Text="Konto InPost" FontSize="24" Foreground="#FFCC00" Margin="0,0,0,10"/>

                <StackPanel x:Name="PanelLoggedOut" Visibility="Collapsed" Margin="0,0,0,30">
                    <TextBlock x:Name="LblNotLoggedIn" x:Uid="LblNotLoggedIn" Text="Zaloguj się, aby pobierać paczki automatycznie." Foreground="Gray" TextWrapping="Wrap" Margin="0,0,0,15"/>
                    <Button x:Name="BtnLogin" x:Uid="BtnLogin" Content="ZALOGUJ SIĘ" Click="Login_Click" 
                            Background="#FFCC00" Foreground="Black" FontWeight="Bold"
                            HorizontalAlignment="Stretch" Height="50"/>
                </StackPanel>

                <StackPanel x:Name="PanelLoggedIn" Visibility="Collapsed" Margin="0,0,0,30">
                    <TextBlock x:Uid="LblLoggedInAs" Text="Zalogowano jako:" Foreground="Gray" FontSize="14"/>
                    <TextBlock x:Name="LblUserPhone" Text="+48 000 000 000" FontSize="22" Foreground="White" Margin="0,0,0,15" FontWeight="SemiBold"/>

                    <Button x:Name="BtnLogout" x:Uid="BtnLogout" Content="WYLOGUJ SIĘ" Click="Logout_Click" 
                            Background="Transparent" Foreground="White" BorderBrush="White" BorderThickness="2"
                            HorizontalAlignment="Stretch" Height="50"/>
                </StackPanel>

                <TextBlock x:Uid="TxtLanguageLabel" Text="Język aplikacji" FontSize="24" Margin="0,0,0,10"/>

                <ComboBox x:Name="LanguageComboBox" 
                          HorizontalAlignment="Stretch" 
                          SelectionChanged="LanguageComboBox_SelectionChanged"
                          Margin="0,0,0,20">
                    <ComboBoxItem Content="Domyślny (System)" Tag="System"/>
                    <ComboBoxItem Content="Polski" Tag="pl-PL"/>
                    <ComboBoxItem Content="English" Tag="en-US"/>
                </ComboBox>

                <TextBlock x:Uid="TxtRestartInfo" 
                           Text="*Zmiana języka wymaga restartu aplikacji."
                           Foreground="#BBBBBB" 
                           FontSize="15"
                           FontWeight="SemiBold" 
                           TextWrapping="Wrap"
                           Margin="2,0,0,0"/>

            </StackPanel>
        </ScrollViewer>

        <Grid Grid.Row="1" Margin="10,0,10,30" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Uid="BtnLegal" 
                    Content="Informacje prawne" 
                    Click="Legal_Click" 
                    HorizontalAlignment="Stretch" 
                    Height="50"
                    Grid.Column="0"/>

            <Button x:Uid="BtnAbout" 
                    Content="O Aplikacji" 
                    Click="About_Click" 
                    HorizontalAlignment="Stretch" 
                    Height="50"
                    Grid.Column="2"/>
        </Grid>
    </Grid>
</Page>